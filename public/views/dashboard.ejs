<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DashBoard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>
<body>
<header>
    <a href="/user/logout">log out</a>
</header>
    <div class="mb-3">
        <label for="name" class="form-label">firstName</label>
        <%=user.firstName%> 
        <label for="name" class="form-label">lastname</label>
        <%=user.lastName%> 
        <label for="name" class="form-label">email</label>
        <%=user.email%>

        <label for="name" class="form-label">profile picture</label>
        <img src="<%=user.profilePicture%>" alt="">
    </div>
     <div class="mb-3">
    <form action="/user/createShortUrl" method="post">
        <label for="url" class="form-label">URL</label>
        <input class="form-control" name="url" type="url">
        <button type="submit">shortify</button>
    </form>
     </div>

    <table class="table table-hover">
        <thead>

            <th>URL</th>
            <th>SHORT URL</th>
            <th>CLICKED</th>
            <th>TIME</th>
            <th>DELETE</th>
        </thead>

        <thead>
            <% user.data.forEach(function(element) { %>
                <tr>
                    <td><a href="<%=element.orignalUrl%>" target="_blank"><%=element.orignalUrl%></a></td>
                    <td><a href="/user/getShortUrl/<%=element.shortUrl%>" target="_blank"><%=element.shortUrl%></a></td>
                    <td><%=element.count%></td>
                    <td><%=element.timeStamp%></td>
                    <td><a href="/user/delShortUrl/<%=element._id%>">delete</a></td>
                </tr>
             <% }); %> 
        </thead>


    </table>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>